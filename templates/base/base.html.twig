<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <meta name="description" content="La boutique qui vend uniquement des produits Français">
    <title>{% block title 'La boutique Française' %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css')}}" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/carousel.css')}}" rel="stylesheet">

</head>

<body>

    {% include('_includes/_navbar.html.twig') %}

    {% if block('carousel') is defined %}
        {% include('_includes/_carousel.html.twig') %}
    {% endif %}

    <main role="main" class="container-xl {% if block('carousel') is not defined %}mt-5{% endif %}">

        {% block body %}{% endblock %}

    </main>

    {% include('_includes/_footer.html.twig') %}

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
    {% endblock %}

</body>
</html>