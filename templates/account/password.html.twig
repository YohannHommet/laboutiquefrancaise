{% extends "base/base.html.twig" %}

{% block title 'Account'%}

{% block body %}

    <h1 class="text-muted">Account Settings</h1>

    <a href="{{ path('app_account')}}">Back to your account</a>

    <div class="row my-5">
        <div class="col-6 mx-auto card bg-white border-info shadow">

            <h1 class="h2 text-center mt-2">Account informations</h1>
            <hr class="mx-auto my-5 w-75">

            {{ form_start(form)}}

            <div class="row">
                <div class="col-6">
                    {{ form_row(form.firstname)}}
                </div>
                <div class="col-6">
                    {{ form_row(form.lastname)}}
                </div>
            </div>

            {{ form_row(form.email)}}

            <hr class="mx-auto my-5 w-75">

            {{ form_row(form.old_password)}}

            {{ form_row(form.new_password)}}

            <div class="d-grid">
                <button type="submit" class="btn btn-info mt-4 mb-3">Update my Password !</button>
            </div>

            {{ form_end(form)}}
        </div>

    </div>


{% endblock %}